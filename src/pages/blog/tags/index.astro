---
import { getCollection } from "astro:content";
import Header from "~/components/blog/Header.astro";
import Footer from "~/components/blog/Footer.astro";
import BlogLayout from "~/layouts/BlogLayout.astro";
import Main from "~/layouts/Main.astro";
import Tag from "~/components/blog/Tag.astro";
import getUniqueTags from "~/utils/getUniqueTags";
import { SITE } from "~/config";

const posts = await getCollection("blog");

let tags = getUniqueTags(posts);
---

<BlogLayout title={`Tagi | ${SITE.title}`}>
  <Header activeNav="tags" />
  <Main pageTitle="Tagi" pageDesc="Wszystkie tagi uÅ¼yte w postach.">
    <ul>
      {tags.map((tag) => <Tag name={tag} size="lg" />)}
    </ul>
  </Main>
  <Footer />
</BlogLayout>
