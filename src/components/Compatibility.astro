---
import CompatibilityList from '~/components/CompatibilityList.astro'
import ContentSection from '~/components/ContentSection.astro'
import type { CompatibilityItem } from '~/types'
import { getLocale } from 'astro-i18n-aut'
import { t } from '../utils/i18n.ts'

const locale = getLocale(Astro.url)
const localedData = t(locale)

const frameworks: Array<CompatibilityItem> = [
	{
		title: 'React',
		icon: 'frameworks/react',
		url: 'https://reactjs.org/'
	},
	{
		title: 'Angular',
		icon: 'frameworks/angular',
		url: 'https://angular.io/'
	},
	{
		title: 'Svelte',
		icon: 'frameworks/svelte',
		url: 'https://svelte.dev/'
	},
	{
		title: 'Next',
		icon: 'frameworks/next',
		url: 'https://nextjs.org/'
	},
	{
		title: 'Astro',
		icon: 'frameworks/astro',
		url: 'https://astro.build/'
	},
	{
		title: 'Vue',
		icon: 'frameworks/vue',
		url: 'https://vuejs.org/'
	}
]

const platforms: Array<CompatibilityItem> = [
	{
		title: 'Netlify',
		icon: 'platforms/netlify',
		url: 'https://www.netlify.com/'
	},
	{
		title: 'Vercel',
		icon: 'platforms/vercel',
		url: 'https://vercel.com/'
	},
	{
		title: 'Cloudflare',
		icon: 'fa-brands:cloudflare',
		url: 'https://pages.cloudflare.com/'
	},
	{
		title: 'Render',
		icon: 'platforms/render',
		url: 'https://render.com/'
	},
	{
		title: 'GitHub',
		icon: 'fa-brands:github',
		url: 'https://pages.github.com/'
	},
	{
		title: 'GitLab',
		icon: 'fa-brands:gitlab',
		url: 'https://docs.gitlab.com/ee/user/project/pages/'
	}
]
---

<ContentSection title={localedData.home.technologies} id="nowoczesne-technologie">
	<Fragment set:html={localedData.home.advantagesSubtitle} slot="lead" />
	<CompatibilityList items={frameworks} title={localedData.home.frameworks} url="#" />
	<CompatibilityList items={platforms} title={localedData.home.platforms} url="#" />
</ContentSection>
